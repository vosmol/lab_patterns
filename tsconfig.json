{
  "compilerOptions": {
    /* Language and Environment */
    "lib": ["es2021"],
    "target": "es2021",
    "experimentalDecorators": true,

    /* Modules */
    "module": "commonjs",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "resolveJsonModule": true,

    /* JavaScript Support */
    "allowJs": true,

    /* Interop Constraints */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Emit */
    "noEmit": true
  }
}
